@{
    ViewBag.Title = "Home Page";
}

<div class="container">
    <h2>@ViewBag.Title</h2>

    @using (Html.BeginForm("Upload", "Home", FormMethod.Post, new { enctype = "multipart/form-data", @class = "mt-4" }))
    {
        <div class="form-group">
            <label for="file">Upload Excel File:</label>
            <input type="file" name="file" id="file" accept=".xlsx" class="form-control-file">
        </div>

        <button type="submit" class="btn btn-primary">Upload</button>
    }

    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-success mt-3">@ViewBag.Message</div>
    }
    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="alert alert-danger mt-3">@ViewBag.Error</div>
    }
</div>
